<% if current_user.present? %>
    <h3><%= t(:add_comment)%></h3>
    <%= form_for([@post, @post.comments.build]) do |f| %>
        <p>
            <%= f.label t(:user_name) %><br>
            <%= f.text_field :username, value: "#{current_user.name}" %>
        </p>
        <p>
            <%= f.label t(:body_comment) %><br>
            <%= f.text_area :body %>
        </p>
        <p>
            <%= f.submit({:class => 'btn btn-sm btn-outline-secondary'}) %>
        </p>
    <% end %>
<% end %>