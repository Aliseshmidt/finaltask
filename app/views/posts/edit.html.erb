<h1><%= t(:edit_post) %></h1>
<%= form_for :post, url: post_path(@post), method: :patch, data: { turbo: false }  do |f| %>
    <% if @post.errors.any? %>
        <% @post.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger"><%= msg %></div>
        <% end %>
    <% end %>
    <p>
        <%= f.label t(:title_post) %><br>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label t(:body_post) %><br>
        <%= f.text_area :body %>
    </p>
    <p>
        <%= f.label t(:image_post) %><br>
        <%= f.file_field :image%>
    </p>
    <p>
        <%= f.submit({:class => 'btn btn-primary'}) %>
    </p>
<% end %>