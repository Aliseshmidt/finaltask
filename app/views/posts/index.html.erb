<h1><%= t(:heroes)%></h1>
    <% @posts.each do |post|%>
        <div class="card card-body bg-light">   
            <h3 style="color:black"><%= post.title %></h3>
            <div style="width:200px; height:auto"><p><%=link_to (image_tag(post.image, style:'width:100%')), post_path(post)%><p></div>
        </div>
    <%end%>
