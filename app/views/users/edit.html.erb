<h1>Edit profile</h1>
<%= form_for :user, url: user_path(@user), method: :patch, data: { turbo: false }  do |f| %>
    <% if @user.errors.any? %>
        <% @user.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger"><%= msg %></div>
        <% end %>
    <% end %>
    <p>
        <%= f.label :info %><br>
        <%= f.text_area :info %>
    </p>
    <p>
        <%= f.label :rang %><br>
        <%= f.text_field :rang %>
    </p>
    <p>
        <%= f.submit({:class => 'btn btn-primary'}) %>
    </p>
<% end %>